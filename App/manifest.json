{
  "manifest_version": 3,
  "name": "Claude Track & Export",
  "version": "1.0.0",
  "description": "Real-time usage tracking and seamless chat management for Claude.ai",
  "author": "Claude Track & Export",
  "permissions": [
    "storage",
    "clipboardWrite",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://claude.ai/*",
    "https://api.claude.ai/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "exclude_matches": ["https://claude.ai/code", "https://claude.ai/code/*"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  }
}
